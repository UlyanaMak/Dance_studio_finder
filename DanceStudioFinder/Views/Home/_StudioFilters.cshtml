@model DanceStudioFinder.Models.StudioFilterModel





<!-- Название студии-->
<div class="form-floating mb-3 mt-3 validation">
    <input asp-for="Name" type="text" style="border: 1px solid #C8DE9D;" class="form-control" id="studioName" placeholder="Название студии">
    <label for="floatingInput" style="color: #BABABA;">Название студии</label>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<!-- Населённый пункт-->
<div class="form-floating mb-3 mt-3 validation">
    <input asp-for="Locality" type="text" style="border: 1px solid #C8DE9D;" class="form-control" id="locality" placeholder="Населённый пункт">
    <label for="floatingInput" style="color: #BABABA;">Населённый пункт (город/посёлок)</label>
    <span asp-validation-for="Locality" class="text-danger"></span>
</div>

<!-- Район -->
<div class="form-floating mb-3 mt-3 validation">
    <input asp-for="SettlementArea" type="text" style="border: 1px solid #C8DE9D;" class="form-control" id="settlementArea" placeholder="Район">
    <label for="floatingInput" style="color: #BABABA;">Район</label>
    <span asp-validation-for="SettlementArea" class="text-danger"></span>
</div>

<!-- Улица -->
<div class="form-floating mb-3 mt-3 validation">
    <input asp-for="Street" type="text" style="border: 1px solid #C8DE9D;" class="form-control" id="street" placeholder="Улица">
    <label for="floatingInput" style="color: #BABABA;">Улица</label>
    <span asp-validation-for="Street" class="text-danger"></span>
</div>

